{
  "name": "maya-api-backend",
  "version": "1.0.0",
  "description": "Backend API for Maya's Digital Twin chat interface using AI Builders API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:script": "./start.sh",
    "stop": "./stop.sh",
    "dev": "node server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --coverageReporters=json --coverageReporters=text",
    "test:security": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/security_tests",
    "test:performance": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/performance_tests",
    "test:integrity": "node --experimental-vm-modules node_modules/jest/bin/jest.js markdown-reference-integrity.test.js",
    "test:validate-counts": "node scripts/validate-test-counts.js",
    "test:connection": "bash test-connection.sh",
    "test:api": "node test-api-endpoint.js",
    "test:models": "node test-models.js",
    "setup": "cp .env.example .env && echo '⚠️  Please edit .env and add your AI_BUILDER_TOKEN'"
  },
  "keywords": [
    "ai",
    "chat",
    "maya",
    "api"
  ],
  "author": "Janet Xiu Shi",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.4.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
