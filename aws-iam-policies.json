{
  "adminPolicy": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AllowBucketOperations",
        "Effect": "Allow",
        "Action": [
          "s3:ListBucket",
          "s3:GetBucketLocation",
          "s3:GetBucketVersioning"
        ],
        "Resource": "arn:aws:s3:::maya-ai-builder-chat-logs"
      },
      {
        "Sid": "AllowObjectOperations",
        "Effect": "Allow",
        "Action": [
          "s3:PutObject",
          "s3:GetObject",
          "s3:DeleteObject",
          "s3:PutObjectAcl"
        ],
        "Resource": "arn:aws:s3:::maya-ai-builder-chat-logs/*"
      }
    ]
  },
  "viewerPolicy": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AllowListBucket",
        "Effect": "Allow",
        "Action": [
          "s3:ListBucket",
          "s3:GetBucketLocation"
        ],
        "Resource": "arn:aws:s3:::maya-ai-builder-chat-logs"
      },
      {
        "Sid": "AllowGetObject",
        "Effect": "Allow",
        "Action": [
          "s3:GetObject"
        ],
        "Resource": "arn:aws:s3:::maya-ai-builder-chat-logs/*"
      }
    ]
  },
  "roles": {
    "admin": {
      "name": "maya-ai-builder-prod-logs-admin",
      "description": "Admin role for Maya chat logs - full CRUD access",
      "policy": "MayaAIBuilderChatLogsAdminPolicy"
    },
    "viewer": {
      "name": "maya-ai-builder-prod-logs-viewer",
      "description": "Viewer role for Maya chat logs - read-only access",
      "policy": "MayaAIBuilderChatLogsViewerPolicy"
    }
  },
  "bucket": {
    "name": "maya-ai-builder-chat-logs",
    "encryption": "SSE-S3",
    "encryptionCost": "FREE"
  }
}
